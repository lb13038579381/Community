<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xupt.community.dao.InformationDao">
    <select id="getByIds" parameterType="java.lang.String" resultType="com.xupt.community.domain.Community">
        select * from information where id in
        <foreach collection="informationIds" item="item" index="index" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>
<select id="getLatestInformations" resultType="com.xupt.community.domain.Information">
    select * from information order by time desc limit 10
</select>
</mapper>
