<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xupt.community.dao.NewCommunityApplyDao">
    <select id="list" resultType="com.xupt.community.domain.NewCommunityApply">
    select * from new_community_apply
</select>

    <insert id="add" parameterType="com.xupt.community.domain.NewCommunityApply">
        insert into new_community_apply (
        name,
        director_id,
        introduction,
        status,
        remark,
        thumbnail,
        time
        ) values(
        #{name},
        #{directorId},
        #{introduction},
        #{status},
        #{remark},
        #{thumbnail},
        #{time}
        )
    </insert>

    <select id="getByMemberId" parameterType="java.lang.Long" resultType="com.xupt.community.domain.NewCommunityApply">
    select * from new_community_apply where director_id = #{directorId}
</select>

    <delete id="deleteById" parameterType="java.lang.Long">
        delete from new_community_apply where id = #{id}
    </delete>
    <update id="refuseApply" parameterType="java.lang.Long">
        update new_community_apply set status = 2 where id = #{id}
    </update>
    <update id="adoptApply" parameterType="java.lang.Long">
        update new_community_apply set status = 1 where id = #{id}
    </update>
    <select id="getById" parameterType="java.lang.Long" resultType="com.xupt.community.domain.NewCommunityApply">
        select * from new_community_apply where id = #{id}
    </select>
</mapper>
