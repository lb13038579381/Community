<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xupt.community.dao.CommunityApplyDao">
    <insert id="add" parameterType="com.xupt.community.domain.CommunityApply">
        insert into community_apply
        (member_id,
        community_id,
        apply,
        status,
        community_name,
        apply_time)
        values(
        #{memberId},
        #{communityId},
        #{apply},
        #{status},
        #{communityName},
        #{applyTime}
        )
    </insert>
    <delete id="delete" parameterType="com.xupt.community.domain.CommunityApply">
        delete  from community_apply where 1 = 1
        <if test="memberId != null">
            and member_id = #{memberId}
        </if>
        <if test="communityId != null">
            and community_id = #{communityId}
        </if>
    </delete>

    <select id="getCommunityAppliesByCommunityId" parameterType="java.lang.Long" resultType="com.xupt.community.domain.CommunityApply">
        select * from community_apply where community_id = #{communityId}
    </select>

    <select id="getCommunityAppliesByMemberId" parameterType="java.lang.Long" resultType="com.xupt.community.domain.CommunityApply">
        select * from community_apply where member_id = #{memberId}
    </select>
    <select id="getByMemberIdAndCommunityId" parameterType="com.xupt.community.domain.CommunityApply" resultType="com.xupt.community.domain.CommunityApply">
        select * from community_apply where member_id = #{memberId} and community_id = #{communityId}
    </select>
    <delete id="deleteById" parameterType="java.lang.Long">
        delete from community_apply where id = #{id}
    </delete>
    <update id="refuseApply" parameterType="java.lang.Long">
        update community_apply set status = 2 where id = #{id}
    </update>
    <update id="adoptApply" parameterType="java.lang.Long">
        update community_apply set status = 1 where id = #{id}
    </update>
    <select id="getById" parameterType="java.lang.Long" resultType="com.xupt.community.domain.CommunityApply">
        select * from community_apply where id = #{id}
    </select>
</mapper>
